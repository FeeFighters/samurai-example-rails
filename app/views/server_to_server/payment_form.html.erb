<div id="content" class="wrapper payment-form">
  <h1>Checkout</h1>

  <section class="shopping-cart">
    <h2>Shopping Cart</h2>

    <table cellpadding="0" cellspacing="0">
      <thead>
        <tr><th>Qty</th><th>Item</th><th>Price</th></tr>
      </thead>
      <tbody>
        <tr>
          <td>1</td>
          <td><%= image_tag 'battle-axe.jpg', :size => '40x40', :class => 'left cleaner' %>Server-to-Server Battle Axe</td>
          <td>$  22.22</td>
        </tr>
        <tr>
          <td></td>
          <td>Overnight Shipping (battle imminent!)</td>
          <td>$ 100.00</td>
        </tr>
        <tr class="total">
          <td></td>
          <td>Total:</td>
          <td>$ 122.22</td>
        </tr>
      </tbody>
    </table>
  </section>

  <section class="payment-info">
    <h2>Enter your payment information:</h2>
    <div class="samurai">
      <%= form_tag server_to_server_purchase_path do %>
        <%= label_tag :payment_method_card_number, 'Card Number' %><%= text_field_tag :payment_method_card_number %>
        <%= label_tag :payment_method_cvv, 'CVV' %><%= text_field_tag :payment_method_cvv %>
        <%= submit_tag 'Purchase' %>
      <% end %>
    </div>
  </section>

  <footer>
    <%= link_to 'Back to the Samurai Weapons', root_path, :class => 'back' %>
  </footer>
</div>
